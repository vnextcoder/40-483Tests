        <Label x:Name="lblRunTime" Content="RunTime" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="156" Height="40" Grid.Column="2"/>
        <ListBox x:Name="lstActionLog" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="329" Margin="44,127,0,0" VerticalAlignment="Top" Width="596">
            <ListBoxItem Content="Action Log"/>
        </ListBox>

    </Grid>
</Window>
